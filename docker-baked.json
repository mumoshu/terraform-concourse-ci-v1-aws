{
  "builders": [{
    "type": "amazon-ebs",
    "region": "ap-northeast-1",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "packer-ubuntu-xenial-docker-{{timestamp}}"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "uname -a",
      "sudo apt-get update",
      "sudo apt-get --yes upgrade"
    ]
  }]
}
